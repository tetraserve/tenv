<%- bitcoind = @config['bitcoind'] -%>

txindex=1
dnsseed=<%= bitcoind['dnsseed'] %>
upnp=<%= bitcoind['upnp'] %>
printtoconsole=1
server=1

# https://github.com/bitcoin/bitcoin/blob/master/doc/bitcoin-conf.md#network-specific-options
# Network specific options can be:
# placed into sections with headers [main], [test] or [regtest]

<%- if bitcoind['network'] == 'mainnet' -%>

[main]
rpcuser=<%= bitcoind['rpcuser'] %>
rpcpassword=<%= bitcoind['rpcpassword'] %>
port=<%= bitcoind['port'] %>
rpcport=<%= bitcoind['rpcport'] %>
rpcbind=0.0.0.0
rpcallowip=<%= bitcoind['rpcallowip'] %>

<%- else -%>

testnet=3

[test]
rpcuser=<%= bitcoind['rpcuser'] %>
rpcpassword=<%= bitcoind['rpcpassword'] %>
port=<%= bitcoind['port'] %>
rpcport=<%= bitcoind['rpcport'] %>
rpcbind=0.0.0.0
rpcallowip=<%= bitcoind['rpcallowip'] %>

<%- end -%>
