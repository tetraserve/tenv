[retry]

[docker]
endpoint = "unix:///var/run/docker.sock"
domain = "local"
watch = true
exposedbydefault = false

<% if @config['ssl']['enabled'] -%>
[acme]
email = "<%= @config['ssl']['email'] %>"
storage = "acme.json"
entryPoint = "https"
OnHostRule = true
usebindportip = true

[acme.httpChallenge]
entryPoint = "http"
<% end -%>
