version: '3.8'

services:
  app:
    restart: always
    image: "yuknak/snn:latest"
    env_file:
      - ../config/app.env
    expose:
      - "3001"
    labels:
      traefik.enable: true
      traefik.frontend.rule: "Host:<%= @config['app']['subdomain'] %>.<%= @config['app']['domain'] %>"
      #traefik.frontend.auth.basic: '<%= @config['app']['basic_auth'] %>'
      traefik.port: 3001
