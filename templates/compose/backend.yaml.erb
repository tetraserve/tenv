version: '3.8'

services:
  db:
    restart: always
    image: mysql:5.7.29
    volumes:
      - db_data:/var/lib/mysql
      - ../config/mysql:/etc/mysql/conf.d
    ports:
      - "3306:3306"
    environment:
      MYSQL_ROOT_PASSWORD: changeme

volumes:
  db_data:
    driver_opts:
      type: none
      device: "<%= @config['app']['docker_volumes_path'] %>/db_data"
      o: bind


