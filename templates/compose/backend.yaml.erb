version: '3.6'

services:
  db:
    restart: always
    image: mysql:5.7.29
    volumes:
      - db_data:/var/lib/mysql
      - ../config/mysql:/etc/mysql/conf.d
    environment:
      MYSQL_ROOT_PASSWORD: changeme

  influxdb:
    image: influxdb:1.7.10
    restart: always
    volumes:
      - influx_data:/var/lib/influxdb
      - ../config/influxdb/build_candles.sql:/build_candles.sql
      - ../config/influxdb/influxdb.sql:/influxdb.sql
      - ../config/arke/historical_data:/data/historical_data
    environment:
       INFLUXDB_ADMIN_ENABLED: "true"

  redis:
    image: redis:4.0.14
    restart: always
    volumes:
      - redis_data:/data

  rabbitmq:
    image: rabbitmq:3.7.25-management
    restart: always
    volumes:
      - rabbitmq_data:/var/lib/rabbitmq

  vault:
    image: vault:1.3.4
    restart: always
    volumes:
      - vault_data:/vault
    <%- if @config['vault']['mode'] == "production" -%>
    command:
      - server
    cap_add:
      - IPC_LOCK
    <%- end -%>
    environment:
    <%- if @config['vault']['mode'] == "production" -%>
      VAULT_LOCAL_CONFIG: '{"storage": {"file": { "path": "/vault/data" }}, "listener": {"tcp":{"address": "0.0.0.0:8200","tls_disable":"1"}}}'
    <%- elsif @config['vault']['mode'] == "development" -%>
      SKIP_SETCAP: 1
      VAULT_TOKEN: <%= @config['vault']['token'] %>
      VAULT_DEV_ROOT_TOKEN_ID: <%= @config['vault']['token'] %>
    <%- end -%>
      VAULT_ADDR: http://vault:8200

volumes:
  db_data:
    driver_opts:
      type: none
      device: "<%= @config['app']['docker_volumes_path'] %>/db_data"
      o: bind
  rabbitmq_data:
    driver_opts:
      type: none
      device: "<%= @config['app']['docker_volumes_path'] %>/rabbitmq_data"
      o: bind
  redis_data:
    driver_opts:
      type: none
      device: "<%= @config['app']['docker_volumes_path'] %>/redis_data"
      o: bind
  vault_data:
    driver_opts:
      type: none
      device: "<%= @config['app']['docker_volumes_path'] %>/vault_data"
      o: bind
  influx_data:
    driver_opts:
      type: none
      device: "<%= @config['app']['docker_volumes_path'] %>/influx_data"
      o: bind
