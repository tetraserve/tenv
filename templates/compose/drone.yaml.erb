version: '3.8'

services:
  drone-server:
    image: drone/drone:0.7.3
    ports:
      - 4000:8000
    volumes:
      #- ./drone:/var/lib/drone/
      - drone_data:/var/lib/drone/
    restart: always
    environment:
      - DRONE_OPEN=true
      - DRONE_HOST=<%= @config['drone']['host'] %> 
      - DRONE_GITHUB=true       
      - DRONE_GITHUB_URL=<%= @config['drone']['github_url'] %>
      - DRONE_GITHUB_CLIENT=<%= @config['drone']['github_client'] %>
      - DRONE_GITHUB_SECRET=<%= @config['drone']['github_secret'] %>
      - DRONE_SECRET=<%= @config['drone']['secret'] %>
      - DRONE_GITHUB_PRIVATE_MODE=true
    labels:
      traefik.enable: true
      traefik.frontend.rule: "Host:<%= @config['drone']['subdomain'] %>.<%= @config['domain'] %>"
      traefik.port: 8000

  drone-agent:
    image: drone/drone:0.7.3
    command: agent
    restart: always
    depends_on:
      - drone-server
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    environment:
      - DRONE_SERVER=ws://drone-server:8000/ws/broker
      - DRONE_SECRET=<%= @config['drone']['secret'] %>

volumes:
  drone_data:
    driver_opts:
      type: none
      device: "<%= @config['drone']['docker_volumes_path'] %>/drone_data"
      o: bind