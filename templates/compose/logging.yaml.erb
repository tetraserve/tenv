# From
# https://github.com/naokirin/sample-logspout-to-kibana

# Before runnning this docker-compose.yml,
# You have to configure vm.max_map_count = 262144.
# Otherwise elasticsearch container does not launch certainly by
# displaying following error message.
#  ERROR: [1] bootstrap checks failed
#  [1]: max virtual memory areas vm.max_map_count [65530] is too low, increase to at least [262144]

# When you use linux, execute following command.
# vi /etc/sysctl.conf
# vm.max_map_count = 262144
# sudo sysctl --system

version: '3.6'

services:

  #elasticsearch_old_index_deletion:
  #  build: ./elasticsearch_old_index_deletion

  logspout:
    image: gliderlabs/logspout:v3.2.8
    command: syslog://logstash:5000
    environment:
      - RETRY_COUNT=100
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock

  logstash:
    image: docker.elastic.co/logstash/logstash:6.8.8
    environment:
      - LOGSPOUT=ignore
      - XPACK_WATCHER_ENABLED=false
      - XPACK_MONITORING_ENABLED=false
    volumes:
      - ../config/logstash.conf:/usr/share/logstash/pipeline/logstash.conf

  kibana:
    image: docker.elastic.co/kibana/kibana:6.8.8
    environment:
      - LOGSPOUT=ignore
      - ELASTICSEARCH_URL=http://elasticsearch:9200
    labels:
      traefik.enable: true
      traefik.frontend.rule: "Host:kibana.<%= @config['app']['domain'] %>"
      traefik.frontend.auth.basic: '<%= @config['kibana']['basic_auth'] %>'
      traefik.port: 5601

  elasticsearch:
    image: docker.elastic.co/elasticsearch/elasticsearch:6.8.8
    environment:
      - LOGSPOUT=ignore
      - node.name=dev-log-kibana
      - bootstrap.memory_lock=true
      - xpack.security.enabled=false
      - xpack.monitoring.enabled=false
      - xpack.watcher.enabled=false
      - xpack.graph.enabled=false
      - "ES_JAVA_OPTS=-Xms1g -Xmx1g"
    ulimits:
      memlock:
        soft: -1
        hard: -1
      nofile:
        soft: 65536
        hard: 65536
    volumes:
      - es_data:/usr/share/elasticsearch/data

volumes:
  es_data:
    driver_opts:
      type: none
      device: "<%= @config['app']['docker_volumes_path'] %>/es_data"
      o: bind