
################ Cryptosv

######## Output

output "opendax_cryptosv_external_ip_<%= @config['mode'] %>" {
  value = google_compute_address.cryptosv-<%= @config['mode'] %>.address
}
output "opendax_cryptosv_internal_ip_<%= @config['mode'] %>" {
  value = google_compute_instance.cryptosv-<%= @config['mode'] %>.network_interface[0].network_ip
}

######## Instance

resource "google_compute_instance" "cryptosv-<%= @config['mode'] %>" {
  name         = "cryptosv-<%= @config['mode'] %>"
  machine_type = "<%= @config['gcp']['cryptosv_machine_type'] %>"
  zone         = var.zone
  allow_stopping_for_update = true
  boot_disk {
    initialize_params {
      image = var.image
      type  = "pd-ssd"
      size  = <%= @config['gcp']['cryptosv_disk_size'] %>
    }
  }
  network_interface {
    network = data.terraform_remote_state.network.outputs.opendax_network.id
    access_config {
      nat_ip = google_compute_address.cryptosv-<%= @config['mode'] %>.address
    }
  }
  service_account {
    scopes = ["cloud-platform"] # full access
  }
  tags = ["allow-webhook"]
  metadata = {
    sshKeys = "deploy:${file(var.ssh_public_key)}\nroot:${file(var.ssh_public_key)}"
  }
  # only root user can execute this.(sudo does not work.)
  <%= RendererHelperGcp::provisioner_remote_exec(
    'root', 
    'inline = ['+
      "\"hostname cryptosv-gcp-#{@config['mode']}\", "+
      "\"cp -f /etc/hostname /etc/hostname.bak\", "+
      "\"echo 'cryptosv-gcp-#{@config['mode']}' > /etc/hostname\""+
    ']'
  ) %>
  <%= RendererHelperGcp::provisioner_file(
    'deploy', 'var.ssh_private_key', '"/home/deploy/.ssh/id_rsa"'
  ) %>
  <%= RendererHelperGcp::provisioner_remote_exec(
    'deploy', 
    'inline = ['+
      '"chmod 600 /home/deploy/.ssh/id_rsa", '+
      '"mkdir -p /home/deploy/opendax"'+
    ']'
  ) %>
  <% RendererHelperGcp::provisioner_local_exec(
    '"rm -rf /tmp/upload && mkdir -p /tmp/upload && rsync -rv --copy-links --safe-links ../../../ /tmp/upload/"'
  ) %>
  <% RendererHelperGcp::provisioner_file(
    'deploy', '"/tmp/upload/"', '"/home/deploy/opendax"'
  ) %>
  <% RendererHelperGcp::provisioner_remote_exec(
    'deploy', 'script = "../../../bin/install_cryptosv.sh"'
  ) %>
  <% RendererHelperGcp::provisioner_remote_exec(
    'deploy', 'script = "../../../bin/start_cryptosv.sh"'
  ) %>

}

######## IP

resource "google_compute_address" "cryptosv-<%= @config['mode'] %>" {
  name = "cryptosv-ip-<%= @config['mode'] %>"
}

######## Cloudflare

#### Internal

<%= RendererHelper::cloudflare_internal(
    "cryptosv-#{@config['mode']}-internal-gcp",
    "cryptosv-#{@config['mode']}.internal.gcp",
    "cryptosv-#{@config['mode']}") %>

#### External

<%= RendererHelper::cloudflare_external(
    "cryptosv-#{@config['mode']}-gcp",
    "cryptosv-#{@config['mode']}.gcp",
    "cryptosv-#{@config['mode']}") %>

