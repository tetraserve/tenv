################ Backend & Providers

terraform {
  backend "gcs" {
    credentials = "<%= @deploy['gcs']['credentials'] %>"
    bucket  = "<%= @deploy['gcs']['terraform_bucket'] %>"
    prefix = "gcp/<%= @config['mode'] %>"
  }
}
provider "google" {
  version = "~> 3.18"
  credentials = file(var.credentials)
  project     = var.project
  region      = var.region
}
