################ Output

output "opendax_network" {
  value = "${google_compute_network.opendax}"
}

################ Network resources

#### Network

resource "google_compute_network" "opendax" {
  name = "opendax-network"
}

#### Firewall

resource "google_compute_firewall" "opendax" {
  name    = "opendax-firewall"
  network = google_compute_network.opendax.name
  allow {
    protocol = "tcp"
    ports    = [ "80", "8080", "1337", "443", "22", "822", "25", "587", "143"]
  }
  source_ranges = ["0.0.0.0/0"]
  target_tags = ["allow-webhook"]
}