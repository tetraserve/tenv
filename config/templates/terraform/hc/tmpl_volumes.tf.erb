################ Output

output "cryptosv-vol1-<%= @config['mode'] %>" {
  value = "${hcloud_volume.cryptosv-vol1-<%= @config['mode'] %>}"
}

################ Volume resources

#### Volume

resource "hcloud_volume" "cryptosv-vol1-<%= @config['mode'] %>" {
  name = "cryptosv-vol1-<%= @config['mode'] %>"
  location = var.region
  size     = 100
}