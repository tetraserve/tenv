################ Output

output "opendax_network" {
  value = "${hcloud_network.opendax-1}"
}

################ Network resources

#### Network

resource "hcloud_network" "opendax-1" {
  name = "opendax-1"
  ip_range = "<%= @deploy['hcloud']['network'] %>"
}
resource "hcloud_network_subnet" "opendax-1" {
  network_id = hcloud_network.opendax-1.id
  type = "server"
  network_zone = "eu-central"
  ip_range   = "<%= @deploy['hcloud']['subnet'] %>"
}